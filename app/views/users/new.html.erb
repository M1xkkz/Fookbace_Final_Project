<div class="signup-container">
  <h1>Sign Up</h1>
  <%= form_with model: @user, local: true do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <% if @user.errors[:email].any? %>
      <p style="color: red;"><%= @user.errors[:email].first %></p>
    <% end %>
  </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div>
      <%= f.submit "Sign Up" %>
    </div>
  <% end %>
  <%= link_to "Log In", login_path, class: "back-link" %>
</div>
