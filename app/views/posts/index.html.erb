    <h1>Posts</h1>

   

    <% @posts.each do |post| %>
    <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <p>Posted by: <%= post.user.name %></p>
        <p> üëç <%= post.likes.count %></p>

        <div class="actions">
        <% if logged_in? %>
            <!-- ‡πÅ‡∏™‡∏î‡∏á‡∏õ‡∏∏‡πà‡∏° Edit ‡πÅ‡∏•‡∏∞ Delete ‡πÄ‡∏â‡∏û‡∏≤‡∏∞‡πÄ‡∏à‡πâ‡∏≤‡∏Ç‡∏≠‡∏á‡πÇ‡∏û‡∏™‡∏ï‡πå -->
            <% if post.user == current_user %>
            <div class="post-actions">
                <%= link_to "Edit", edit_post_path(post), class: "edit-btn" %>
                <%= button_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-btn" %>

            </div>
            <% end %>

            <!-- ‡∏õ‡∏∏‡πà‡∏° Like/Unlike -->
            <% if post.likes.exists?(user: current_user) %>
            <%= button_to "Unlike", post_like_path(post), method: :delete, class: "like-btn" %>
            <% else %>
            <%= button_to "Like", post_like_path(post), method: :post, class: "like-btn" %>
            <% end %>

            <!-- ‡πÇ‡∏Ñ‡πâ‡∏î‡πÅ‡∏™‡∏î‡∏á‡∏Ñ‡∏≠‡∏°‡πÄ‡∏°‡∏ô‡∏ï‡πå -->
            <h3>Comments</h3>
            <ul class="comments">
            <% post.comments.each do |comment| %>
                <li>
                <strong><%= comment.user.name %>:</strong> <%= comment.content %>

                <% if comment.user == current_user || post.user == current_user %>
                    <%= button_to "‚ùå", post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
                </li>
            <% end %>
            </ul>

            <!-- ‡∏ü‡∏≠‡∏£‡πå‡∏°‡∏Ñ‡∏≠‡∏°‡πÄ‡∏°‡∏ô‡∏ï‡πå -->
            <%= form_with(model: [post, Comment.new], local: true, class: "comment-form") do |f| %>
            <div>
                <%= f.text_area :content, placeholder: "Add a comment..." %>
                <%= f.submit "Comment" %>
            </div>
            <% end %>

        <% else %>
            <!-- ‡πÇ‡∏Ñ‡πâ‡∏î‡πÅ‡∏™‡∏î‡∏á‡∏Ñ‡∏≠‡∏°‡πÄ‡∏°‡∏ô‡∏ï‡πå‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡∏•‡πá‡∏≠‡∏Å‡∏≠‡∏¥‡∏ô -->
            <h3>Comments</h3>
            <ul class="comments">
            <% post.comments.each do |comment| %>
                <li>
                <strong><%= comment.user.name %>:</strong> <%= comment.content %>
                </li>
            <% end %>
            </ul>
        <% end %>
        </div>
    </div>
    <% end %>
