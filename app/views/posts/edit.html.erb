<div id="edit-post-page">
  <h1>Edit Post</h1>
  <%= form_with model: @post, local: true do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
    <div>
      <%= f.submit "Update Post" %>
    </div>
  <% end %>
  <%= link_to "Back", root_path %>
</div>
