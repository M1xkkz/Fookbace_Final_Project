<div class="login-container">
  <h1>Log In</h1>
  <%= form_with url: login_path, local: true do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit "Log In" %>
    </div>
  <% end %>
  <%= link_to "Back", root_path, class: "back-link" %>
</div>
